@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <div class="login-card">
        <h1 class="text-center mb-4">Welcome Back</h1>

        <form method="post">
            <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-floating mb-3">
                <input asp-for="Credentials.Username" class="form-control" placeholder="Username" />
                <label asp-for="Credentials.Username"></label>
                <span asp-validation-for="Credentials.Username" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Credentials.Password" type="password" class="form-control" placeholder="Password" />
                <label asp-for="Credentials.Password"></label>
                <span asp-validation-for="Credentials.Password" class="text-danger small"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>

            <button type="submit" class="btn btn-login btn-primary mb-3">Login</button>

            <div class="text-center">
                <p class="mb-0">
                    Don't have an account?
                    <a asp-page="./Register">Register</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
