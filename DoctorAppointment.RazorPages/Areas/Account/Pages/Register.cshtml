@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="register-container">
    <div class="register-card">
        <h1 class="text-center mb-4">Create Your Account</h1>
        
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Registration.FirstName" class="form-control" 
                               placeholder="First Name" />
                        <label asp-for="Registration.FirstName"></label>
                        <span asp-validation-for="Registration.FirstName" class="text-danger small"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Registration.LastName" class="form-control" 
                               placeholder="Last Name" />
                        <label asp-for="Registration.LastName"></label>
                        <span asp-validation-for="Registration.LastName" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Registration.Username" class="form-control" 
                       placeholder="Username" />
                <label asp-for="Registration.Username"></label>
                <span asp-validation-for="Registration.Username" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Registration.Email" class="form-control" 
                       placeholder="Email" />
                <label asp-for="Registration.Email"></label>
                <span asp-validation-for="Registration.Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Registration.Password" class="form-control" 
                       placeholder="Password" />
                <label asp-for="Registration.Password"></label>
                <span asp-validation-for="Registration.Password" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Registration.ConfirmPassword" class="form-control" 
                       placeholder="Confirm Password" />
                <label asp-for="Registration.ConfirmPassword"></label>
                <span asp-validation-for="Registration.ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-register btn-primary mb-3">
                Register Now
            </button>

            <div class="text-center">
                <p class="mb-0">Already have an account? 
                    <a asp-page="./Login">Sign In</a>
                </p>
            </div>
        </form>
    </div>
</div>
