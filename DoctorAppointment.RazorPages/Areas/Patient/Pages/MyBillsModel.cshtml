@page
@model MyBillsModel
@{
    ViewData["Title"] = "My Bills";
}

<div class="container mt-4">
    <h2>My Bills</h2>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Appointment</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bill in Model.Bills)
                {
                    <tr>
                        <td>@bill.GeneratedDate.ToString("d")</td>
                        <td>@bill.Appointment.Date.ToString("g") with Dr. @bill.Appointment.Doctor.LastName</td>
                        <td>@bill.Amount.ToString("C")</td>
                        <td>
                            <span class="badge @(bill.IsPaid ? "bg-success" : "bg-warning")">
                                @(bill.IsPaid ? "Paid" : "Pending")
                            </span>
                        </td>
                        <td>
                            <a href="#" class="btn btn-sm btn-outline-primary">View Details</a>
                            @if (!bill.IsPaid)
                            {
                                <a href="#" class="btn btn-sm btn-success">Pay Now</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>